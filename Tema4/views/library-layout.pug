doctype html

html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
    script(src='javascripts/send_book.js')
    link(rel='stylesheet', href='/stylesheets/library-layout.css')
  body
    div(class="title")
        <p>Online Library</p>
    div(class='container-fluid')
        ul(class='sidebar-nav')
                    each book in books
                        li 
                            div(class = "content")
                                div(class="book-image")
                                    <img src="http://www.hancock.k12.ky.us/userfiles/92/bookworm.jpg">
                                div(class="information")
                                    div(class="title")
                                        h4= book.book_name
                                    div(class="details")
                                        p= book.book_description
                                    div(class="download")
                                        a(class= 'button', href=`${book.filename}`) Download
        div(class='col-sm-10')
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Upload book</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Upload book</h4>
        </div>
        <div class="modal-body">
          form(id='new-book-form' method='POST' action='/books' enctype='multipart/form-data')
                div.form-group
                    label(for='book-name') Book name
                    input.form-control(type='text' id='book-name' placeholder='book name' name='book-name')
                div.form-group
                    label(for='book-description') Book description
                    input.form-control(type = 'text' id='book-description' placeholder='book description' name='book-description')
                input(type='file', name='Upload book')
        </div>
        <div class="modal-footer">
          button#save-book-button.btn.btn-primary(type='submit') Save book
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
          block content